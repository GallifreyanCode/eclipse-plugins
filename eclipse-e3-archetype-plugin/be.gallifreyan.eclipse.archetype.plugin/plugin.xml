<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Custom Data"
            icon="icons/sample.png"
            class="org.eclipse.ui.navigator.CommonNavigator"
            id="com.example.test">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="com.example.test">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="com.example.test">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.navigator.ProjectExplorer"
               relationship="stack"
               id="com.example.test">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="be.gallifreyan.eclipse.archetype.plugin.commands.category">
      </category>
      <command
            name="New Project"
            categoryId="be.gallifreyan.eclipse.archetype.plugin.commands.category"
            id="be.gallifreyan.eclipse.archetype.plugin.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="be.gallifreyan.eclipse.archetype.plugin.commands.sampleCommand"
            class="be.gallifreyan.eclipse.archetype.plugin.handlers.Handler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="be.gallifreyan.eclipse.archetype.plugin.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Custom"
               mnemonic="M"
               id="be.gallifreyan.eclipse.archetype.plugin.menus.sampleMenu">
            <command
                  commandId="be.gallifreyan.eclipse.archetype.plugin.commands.sampleCommand"
                  mnemonic="S"
                  id="be.gallifreyan.eclipse.archetype.plugin.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="be.gallifreyan.eclipse.archetype.plugin.toolbars.sampleToolbar">
            <command
                  commandId="be.gallifreyan.eclipse.archetype.plugin.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="New Custom Project"
                  id="be.gallifreyan.eclipse.archetype.plugin.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
